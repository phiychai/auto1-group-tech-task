{
  "compilerOptions": {
    /* Settings for Jest only, it doesn't work with tsconfig references correctly :( */
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,

    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ES2022",
    "types": ["vite/client" /* required to get import.meta working */, "@testing-library/jest-dom"]
  },
  "files": [],
  "references": [{ "path": "./tsconfig.app.json" }, { "path": "./tsconfig.node.json" }]
}
